  		<filter-name>Restriction</filter-name>
  		<filter-class>fr.sandboxwebapp.filter.RestrictionFilter</filter-class>
  	</filter>
  	<filter-mapping>
  		<filter-name>Restriction</filter-name>
  		<url-pattern>/*</url-pattern>
  	</filter-mapping>
</web-app>